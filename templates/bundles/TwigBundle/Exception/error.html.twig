{% extends 'base.html.twig' %}
{% block title %}Erreur {{ status_code }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col m6 push-m3 s12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title center red-text">Erreur {{ status_code }}</span>
                        <p>{{ status_text }}</p>
                    </div>
                    <div class="card-action">
                        <a class="green-text" href="{{ app.request.headers.get('referer') }}">Retourner à la page précédente</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}