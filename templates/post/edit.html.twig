{% extends 'base.html.twig' %}
{% block title %}Edition{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s6 push-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title center primary-color">Editer</span>
                        {{ form_start(postForm, {'attr' : {'id': 'editPostForm'}}) }}
                        {{ form_widget(postForm) }}
                        <div class="center">
                            <button type="submit" class="waves-effect waves-green btn-flat green white-text">Valider
                            </button>
                        </div>
                        {{ form_end(postForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        (function ($) {
            $(function () {



                $("form#editPostForm").submit(function (e) {
                    var $input = $(this).find("input#post_form_newTags");
                    $input.val(JSON.stringify(M.Chips.getInstance($('.chips')).chipsData));
                });
            }); // end of document ready
        })(jQuery); // end of jQuery name space
    </script>
{% endblock %}



