{% extends 'base.html.twig' %}

{% block title %}Mot de Passe{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col m6 push-m3 s12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title center primary-color">Nouveau Mot de Passe</span>
                        {{ form_start(resetForm) }}
                        {{ form_widget(resetForm) }}
                        <button class="btn green" type="submit">Valider</button>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
