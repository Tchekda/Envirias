{% extends 'base.html.twig' %}

{% block title %}Reset{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col m6 push-m3 s12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title center primary-color">Mot de Passe oubli√©</span>
                        <form method="POST">
                            {% if error is defined %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="input-field">
                                <input type="text" autofocus name="username" id="username" class="validate"
                                       placeholder="Pseudo ou E-Mail">
                                <label for="username" class="active">Nom d'utilisateur ou E-Mail</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                            <div class="center">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Connexion
                                    <i class="material-icons right">input</i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-action">
                        <a class="green-text" href="{{ path('login') }}">Se Connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
